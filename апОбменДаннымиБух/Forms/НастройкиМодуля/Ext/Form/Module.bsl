		мСтроки = Новый Массив;		
		мСтроки.Добавить(Текст);
		мСтроки.Добавить(Новый ФорматированнаяСтрока(НСтр("ru='этой ссылке'"),,,, стррРезультат.ТипСервера));
		мСтроки.Добавить(".");
		стррРезультат.Описание = Новый ФорматированнаяСтрока(мСтроки);
					 
